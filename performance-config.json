{
  "monitoring": {
    "enabled": true,
    "interval": 30000,
    "metrics": {
      "response_time": {
        "enabled": true,
        "threshold": 2000,
        "alert_on_exceed": true
      },
      "memory_usage": {
        "enabled": true,
        "threshold": 80,
        "unit": "percentage"
      },
      "cpu_usage": {
        "enabled": true,
        "threshold": 75,
        "unit": "percentage"
      },
      "error_rate": {
        "enabled": true,
        "threshold": 5,
        "unit": "percentage"
      }
    }
  },
  "caching": {
    "strategy": "LRU",
    "max_size": 1000,
    "ttl": 300000,
    "compression": true
  },
  "rate_limiting": {
    "enabled": true,
    "requests_per_minute": 100,
    "burst_limit": 20,
    "whitelist": ["127.0.0.1", "localhost"]
  },
  "circuit_breaker": {
    "enabled": true,
    "failure_threshold": 5,
    "timeout": 60000,
    "retry_timeout": 30000
  },
  "logging": {
    "level": "info",
    "format": "json",
    "include_request_id": true,
    "performance_logs": true
  },
  "optimization": {
    "compression": {
      "enabled": true,
      "level": 6,
      "min_size": 1024
    },
    "connection_pooling": {
      "enabled": true,
      "max_connections": 100,
      "timeout": 30000
    },
    "lazy_loading": true,
    "prefetch_critical_resources": true
  },
  "alerts": {
    "email": {
      "enabled": false,
      "recipients": ["admin@ecommerce.com"]
    },
    "webhook": {
      "enabled": true,
      "url": "http://localhost:8081/api/notifications/send"
    },
    "thresholds": {
      "critical": 90,
      "warning": 75,
      "info": 50
    }
  }
}